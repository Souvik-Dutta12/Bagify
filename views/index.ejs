<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bagify</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <style>
        /* Keyframes for slide-in and slide-out animations */
        @keyframes slideIn {
            0% {
                transform: translateY(-100%);
            }

            100% {
                transform: translateY(0);
            }
        }

        @keyframes slideOut {
            0% {
                transform: translateY(0);
            }

            100% {
                transform: translateY(-100%);
            }
        }

        .slide-in {
            animation: slideIn 0.8s ease-out forwards;
            /* Slower arrival animation */
        }

        .slide-out {
            animation: slideOut 0.5s ease-out forwards;
        }
    </style>

</head>

<body class=" bg-gray-900 flex items-center justify-center min-h-screen font-['helvetica_now_display']">
    <span class="text-5xl absolute top-[6%] left-[5%] text-green-500">Bagify</span>
    <div class="w-40 h-screen "></div>
    <div class="w-1/3 h-screen bg-gray-700 flex flex-col justify-center">
        <div class=" flex flex-col px-15">
            <div class="welcome flex gap-2 flex-start">
                <h1 class="text-3xl text-white">Welcome to </h1>
                <p class="text-3xl text-green-500">Bagify</p>
            </div>
            <p class="text-2xl text-zinc-300">Create your account</p>
            <form action="/create" method="post" class="flex flex-col flex-start mt-5 gap-3 ">
                <input
                    class="px-3 w-full py-2 bg-gray-900 border-2 border-solid border-green-500 rounded-md outline-none text-white"
                    name="fullname" type="text" placeholder="Fullname">
                <input
                    class="px-3 w-full py-2 bg-gray-900 border-2 border-solid border-green-500 rounded-md outline-none text-white"
                    name="email" type="email" placeholder="Email">
                <input
                    class="px-3 w-full py-2 bg-gray-900 border-2 border-solid border-green-500 rounded-md outline-none text-white"
                    name="password" type="password" placeholder="Password">
                <input  class="px-3 py-2 bg-green-500 hover:bg-green-600 w-2/3 cursor-pointer text-xl rounded-full" type="submit"
                    value="Create My Account">
            </form>
        </div>
    </div>
    <span
        class="text-2xl bg-green-500  rounded-full h-10 w-10 items-center justify-center absolute flex top-1/2 left-[50%]">
        <p>Or</p>
    </span>
    <div class=" w-1/2 h-screen ml-32 flex flex-col justify-center">
        <div class="flex flex-col px-52">
            <h1 class="text-2xl text-zinc-300">Login your account</h1>
            <form class="flex flex-col flex-start mt-5 gap-3" action="/login" method="post">
                <input
                    class="px-3 w-full py-2 bg-gray-700 border-2 border-solid border-green-500 rounded-md outline-none text-white"
                    type="email" name="emaillog" placeholder="Email">
                <input
                    class="px-3 w-full py-2 bg-gray-700 border-2 border-solid border-green-500 rounded-md outline-none text-white"
                    type="password" name="passlog" placeholder="Password">
                <input class="px-3 py-2 bg-green-500 hover:bg-green-600 w-1/3 text-xl rounded-full cursor-pointer" type="submit" value="Login">
            </form>
        </div>
    </div>

    <div class="owner text-3xl bg-yellow-500 rounded-full  p-5 absolute right-[1%] bottom-[8%] cursor-pointer">
        <a href="/owner">Owner Section</a>
    </div>

    <% if (message) { %>
        <div id="message" class="fixed top-5 left-1/2 transform -translate-x-1/2 px-3 py-2 rounded-md shadow-lg transition-opacity duration-500 text-xl
            <%= message.includes('Error') ? 'bg-red-500' : 'bg-green-500' %> text-gray-900 text-center">
            <%= message %>
        </div>
        <% } %>


            <script>
                // Hide the message after 2 seconds with slide-out animation
                const messageElement = document.getElementById('message');
                if (messageElement) {
                    setTimeout(() => {
                        messageElement.classList.remove('slide-in'); // Remove slide-in animation
                        messageElement.classList.add('slide-out'); // Add slide-out animation

                        // Remove the message from the DOM after the animation completes
                        setTimeout(() => {
                            messageElement.remove();
                        }, 500); // Wait for the slide-out animation to complete
                    }, 2000); // 2 seconds delay
                }
            </script>
</body>

</html>